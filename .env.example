# =========================
# DATABASE CONFIGURATION
# =========================

DB_USERNAME=your_username         # PostgreSQL username
DB_PASSWORD=your_password         # PostgreSQL password
DB_NAME=your_database_name        # Database name
DB_HOST=localhost                 # Hostname of the DB (container or localhost)
DB_PORT=5432                      # Port of the DB
DB_SUBPROTOCOL=postgresql         # e.g., postgresql
DB_DRIVER=org.postgresql.Driver   # JDBC driver class name

# =========================
# APPLICATION CONFIGURATION
# =========================

APPLICATION_PORT=8080             # Port your app will run on

# =========================
# FLYWAY CONFIGURATION
# =========================

IS_ACTIVE=true                    # Enable Flyway migrations
IS_VALIDATE_ON_MIGRATE=true       # Validate migrations on migrate
MIGRATION_LOCATION=classpath:db/migration   # Path to migration scripts

# =========================
# JPA / HIBERNATE CONFIGURATION
# =========================

IS_SHOW_SQL=true                  # Show SQL queries in console
DDL_AUTO=create-drop              # Manage DB schema automatically (create tables on start, drop on shutdown)